{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cost-est",
  "version": "0.1.101",
  "identifier": "com.cost-est.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "/app",
        "title": "cost-estimation",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "init",
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "url": "/init",
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
